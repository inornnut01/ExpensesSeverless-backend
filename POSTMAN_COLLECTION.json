{
  "info": {
    "name": "Expense Tracker API",
    "description": "API endpoints for Serverless Expense Tracker",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://YOUR_API_ID.execute-api.us-east-1.amazonaws.com/dev",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "test-user-123",
      "type": "string"
    },
    {
      "key": "expenseId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Expense",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save expense ID for other requests",
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    if (response.body && response.body.expense) {",
              "        pm.collectionVariables.set('expenseId', response.body.expense.id);",
              "        console.log('Expense ID saved:', response.body.expense.id);",
              "    }",
              "}",
              "",
              "// Test assertions",
              "pm.test('Status code is 201', function() {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has expense object', function() {",
              "    const response = pm.response.json();",
              "    pm.expect(response.body).to.have.property('expense');",
              "    pm.expect(response.body.expense).to.have.property('id');",
              "    pm.expect(response.body.expense).to.have.property('amount');",
              "    pm.expect(response.body.expense).to.have.property('category');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "x-user-id",
            "value": "{{userId}}",
            "type": "text",
            "description": "Mock user ID for authentication"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 250.50,\n  \"category\": \"Food\",\n  \"description\": \"Lunch at restaurant\",\n  \"tags\": [\"restaurant\", \"lunch\"]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/expenses",
          "host": ["{{baseUrl}}"],
          "path": ["expenses"]
        },
        "description": "Create a new expense record"
      },
      "response": []
    },
    {
      "name": "Get All Expenses",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has expenses array', function() {",
              "    const response = pm.response.json();",
              "    pm.expect(response.body).to.have.property('expenses');",
              "    pm.expect(response.body.expenses).to.be.an('array');",
              "});",
              "",
              "pm.test('Response has summary', function() {",
              "    const response = pm.response.json();",
              "    pm.expect(response.body).to.have.property('summary');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-user-id",
            "value": "{{userId}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/expenses",
          "host": ["{{baseUrl}}"],
          "path": ["expenses"]
        },
        "description": "Get all expenses for the authenticated user"
      },
      "response": []
    },
    {
      "name": "Get Expenses with Filters",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-user-id",
            "value": "{{userId}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/expenses?limit=10&category=Food&startDate=2025-01-01&endDate=2025-12-31",
          "host": ["{{baseUrl}}"],
          "path": ["expenses"],
          "query": [
            {
              "key": "limit",
              "value": "10",
              "description": "Maximum number of results"
            },
            {
              "key": "category",
              "value": "Food",
              "description": "Filter by category"
            },
            {
              "key": "startDate",
              "value": "2025-01-01",
              "description": "Start date filter (YYYY-MM-DD)"
            },
            {
              "key": "endDate",
              "value": "2025-12-31",
              "description": "End date filter (YYYY-MM-DD)"
            }
          ]
        },
        "description": "Get expenses with optional filters"
      },
      "response": []
    },
    {
      "name": "Update Expense",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has updated expense', function() {",
              "    const response = pm.response.json();",
              "    pm.expect(response.body).to.have.property('expense');",
              "    pm.expect(response.body.expense).to.have.property('updatedAt');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "x-user-id",
            "value": "{{userId}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 300.00,\n  \"category\": \"Transportation\",\n  \"description\": \"Updated: Taxi fare to airport\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/expenses/{{expenseId}}",
          "host": ["{{baseUrl}}"],
          "path": ["expenses", "{{expenseId}}"]
        },
        "description": "Update an existing expense. Make sure to set expenseId variable first."
      },
      "response": []
    },
    {
      "name": "Delete Expense",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response confirms deletion', function() {",
              "    const response = pm.response.json();",
              "    pm.expect(response.body).to.have.property('message');",
              "    pm.expect(response.body.message).to.include('deleted');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "x-user-id",
            "value": "{{userId}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/expenses/{{expenseId}}",
          "host": ["{{baseUrl}}"],
          "path": ["expenses", "{{expenseId}}"]
        },
        "description": "Delete an expense. Make sure to set expenseId variable first."
      },
      "response": []
    },
    {
      "name": "Test - Create Multiple Expenses",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// This script will run multiple times to create test data"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "x-user-id",
            "value": "{{userId}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": {{$randomInt}},\n  \"category\": \"{{$randomArrayElement(['Food', 'Transportation', 'Entertainment', 'Shopping', 'Healthcare'])}}\",\n  \"description\": \"Test expense - {{$randomLoremWords}}\",\n  \"tags\": [\"test\", \"{{$randomWord}}\"]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/expenses",
          "host": ["{{baseUrl}}"],
          "path": ["expenses"]
        },
        "description": "Create random test expenses with Postman dynamic variables"
      },
      "response": []
    }
  ]
}

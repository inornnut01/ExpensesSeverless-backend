{
  "name": "expense-tracker-backend",
  "version": "1.0.0",
  "description": "Serverless Expense Tracker Backend API",
  "type": "module",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "info": "serverless info",
    "logs:create": "serverless logs -f createExpense -t",
    "logs:get": "serverless logs -f getExpenses -t",
    "logs:update": "serverless logs -f updateExpense -t",
    "logs:delete": "serverless logs -f deleteExpense -t",
    "invoke:create": "serverless invoke -f createExpense --path test/create-expense.json",
    "invoke:get": "serverless invoke -f getExpenses --path test/get-expenses.json"
  },
  "dependencies": {},
  "devDependencies": {
    "serverless": "^3.38.0"
  }
}
